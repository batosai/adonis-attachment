{
  "name": "@jrmc/adonis-attachment",
  "version": "2.0.2",
  "type": "module",
  "description": "Turn any field on your Lucid model to an attachment data type",
  "engines": {
    "node": ">=20.12.0"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/batosai/adonis-attachment.git"
  },
  "author": "Jeremy Chaufourier jeremy@chaufourier.fr",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "lucid",
    "attachment",
    "attachment-advanced",
    "image-attachment",
    "image-manipulation",
    "responsive-images",
    "responsive-image",
    "resize-images",
    "optimize-images",
    "image",
    "pdf",
    "video",
    "document",
    "word",
    "sharp"
  ],
  "files": [
    "build"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run clean && tsc && npm run copyfiles",
    "prepublishOnly": "npm run build",
    "clean": "del-cli build",
    "copyfiles": "copyfiles \"stubs/**/**/*.stub\" build",
    "format": "prettier --write .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "exports": {
    ".": "./build/index.js",
    "./types/*": "./build/src/types/*.js",
    "./mixins": "./build/src/mixins/attachmentable.js",
    "./decorators": "./build/src/decorators/attachment.js",
    "./services/*": "./build/services/*.js",
    "./converters/*": "./build/src/converters/*.js",
    "./attachment_service": "./build/services/attachment_service.js",
    "./attachment_provider": "./build/providers/attachment_provider.js"
  },
  "dependencies": {
    "@poppinss/utils": "^6.7.3",
    "exifreader": "^4.23.3",
    "file-type": "^19.4.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/drive": "^3.2.0",
    "@adonisjs/lucid": "^20.6.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@types/node": "^22.2.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitepress": "^1.3.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/drive": "^3.2.0",
    "@adonisjs/lucid": "^20.6.0 || ^21.0.0"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "volta": {
    "node": "20.16.0"
  }
}